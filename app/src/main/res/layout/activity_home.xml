<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/btn_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        app:layout_constraintBottom_toTopOf="@+id/prog_kcal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="158dp" />

    <ProgressBar
        android:id="@+id/prog_carb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="201dp"
        android:layout_height="41dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_food"
        app:layout_constraintTop_toBottomOf="@+id/prog_fat"
        tools:layout_editor_absoluteX="105dp" />

    <ProgressBar
        android:id="@+id/prog_fat"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="21dp"
        app:layout_constraintBottom_toTopOf="@+id/prog_carb"
        app:layout_constraintTop_toBottomOf="@+id/prog_prot"
        tools:layout_editor_absoluteX="103dp" />

    <ProgressBar
        android:id="@+id/prog_prot"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="203dp"
        android:layout_height="31dp"
        app:layout_constraintBottom_toTopOf="@+id/prog_fat"
        app:layout_constraintTop_toBottomOf="@+id/prog_kcal"
        tools:layout_editor_absoluteX="103dp" />

    <ProgressBar
        android:id="@+id/prog_kcal"
        style="?android:attr/progressBarStyle"
        android:layout_width="155dp"
        android:layout_height="153dp"
        app:layout_constraintBottom_toTopOf="@+id/prog_prot"
        app:layout_constraintTop_toBottomOf="@+id/btn_prof"
        tools:layout_editor_absoluteX="128dp" />

    <Button
        android:id="@+id/btn_add_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add food"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prog_carb"
        tools:layout_editor_absoluteX="157dp" />
</androidx.constraintlayout.widget.ConstraintLayout>